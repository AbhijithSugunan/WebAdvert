@model  WebAdvertV1.Models.Accounts.SignInModel;
<div class="row">
    <div class="col-md-4">
        <h4>Login using your username and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="SignUp">Create Account </a>
        </h5>
        <hr />
        <form method="post" asp-controller="Accounts" asp-action="SignIn">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password"/>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe"/>
                    @Html.DisplayName("Remember Me")
                </div>
            </div>
            <button type="submit">Sign In</button>
        </form>
    </div>
</div>